@import "../../../../node_modules/stylus-media-queries/index.styl";

header-height = 4em
reponsive-width-threshold = 30em


body
    background blue
    margin 0

#animated_header
    background green
    position relative
    width 100%
    height header-height

#animated_header h2
    margin 0

.outer:before,
.outer:after
    content ""
    display table

.outer:after
    clear both

.box_in
    background white
    text-color black

@media screen and (min-width: reponsive-width-threshold)
    section
        display inline
        float left
        width 75%

@media screen and (min-width: reponsive-width-threshold)
    aside
        display inline
        float right
        width 25%


footer
    position fixed
    background white
    width 100%
    height 2em
    bottom 0

footer ul
    float left
    list-style-type none

footer li
    float left
    list-style-type none
    padding-right 1em
